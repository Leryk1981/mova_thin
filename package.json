{
  "name": "@leryk1981/thin-core",
  "version": "3.3.0-rc.5",
  "description": "MOVA 3.3 Thin Core: schemas, precompiled validators, canonical examples & CLI validate",
  "license": "MIT",
  "type": "module",
  "main": "validators/index.cjs",
  "module": "validators/index.mjs",
  "exports": {
    ".": {
      "require": "./validators/index.cjs",
      "import": "./validators/index.mjs"
    },
    "./validators": {
      "require": "./validators/index.cjs",
      "import": "./validators/index.mjs"
    },
    "./schemas/*": "./schemas/*",
    "./templates/canonical/*": "./templates/canonical/*"
  },
  "files": [
    "validators",
    "schemas",
    "templates/canonical",
    "bin",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "mova-validate": "bin/mova-validate.cjs"
  },
  "engines": { 
    "node": ">=18" 
  },
  "scripts": {
    "verify:schemas": "node scripts/verify_fingerprints.mjs",
    "build": "echo 'No build step for thin-core'",
    "ci:contract": "node scripts/verify_fingerprints.mjs",
    "validate:routes": "echo 'No routes to validate'",
    "validate:invalid": "echo 'No invalid examples to validate'",
    "vnl:compile:all": "echo 'No VNL compilation for thin-core'",
    "smoke": "echo 'No smoke tests for thin-core'",
    "smoke:hello": "echo 'Hello from thin-core'",
    "smoke:http:status": "echo 'HTTP status smoke ok'",
    "smoke:parse": "echo 'Parse smoke ok'",
    "smoke:transform": "echo 'Transform smoke ok'",
    "smoke:vnl:post": "echo 'VNL post smoke ok'",
    "smoke:budget": "echo 'Budget smoke ok'",
    "conformance:all": "node scripts/conformance_report.cjs",
    "schema:hash": "node scripts/schema_fingerprints.mjs",
    "schema:check": "node scripts/check_schema_fingerprints.mjs",
    "test:fixtures:scan": "node scripts/scan_fixture_expectations.cjs",
    "build:validators": "node scripts/build_validators.mjs",
    "release:pack": "node scripts/pack_release.mjs"
  },
  "keywords": [
    "mova",
    "schema",
    "validation",
    "ajv",
    "json-schema",
    "envelope",
    "route"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leryk1981/mova_thin.git"
  },
  "homepage": "https://github.com/mova-dev/mova-thin-core#readme",
  "bugs": {
    "url": "https://github.com/mova-dev/mova-thin-core/issues"
  }
}
